<h2>Your cart</h2>
<table class="table table-striped">
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Price</th>
			<th>Quantity</th>
		</tr>
	</thead>
	<tbody>
	<% @items.each do |item| %>
		<tr>
			<td><%= item[0].id %></td>
			<td><%= item[0].title %></td>
			<td><%= item[0].price.to_i * item[1].to_i %></td>
			<td><%= item[1] %></td>
		</tr>
	<% end %>
	</tbody>
</table>

