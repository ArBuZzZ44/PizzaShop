<h2>Your cart</h2>
<table class="table table-striped">
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Price</th>
			<th>Quantity</th>
		</tr>
	</thead>
	<tbody>
	<% total_price = 0 %>
	<% total_quantity = 0 %>
	<% @items.each do |item| %>
		<tr>
			<td><%= item[0].id %></td>
			<td><%= item[0].title %></td>
			<td><%= item[0].price %></td>
			<td><%= item[1] %></td>
		</tr>
		<% total_price += item[0].price * item[1].to_i %>
		<% total_quantity += item[1].to_i %>
	<% end %>
		<tr>
				<td></td>
				<td></td>
				<td>Total: <%= total_price %></td>
				<td><%= total_quantity %></td>
			</tr>
	</tbody>
</table>

